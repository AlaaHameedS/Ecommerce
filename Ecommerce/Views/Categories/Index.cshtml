@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="row"> 
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped table-hover">

            <thead>

                <tr>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Description)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th>@Html.DisplayFor(x => item.Name)</th>
                        <th>@Html.DisplayFor(x => item.Description)</th>
                        <th>
                            <a class="btn btn-outline-info"> <i class="fas fa-regular fa-pencil "></i> Edit</a>
                            <a class="btn btn-outline-secondary" asp-action="Details"  asp-route-id="@item.Id" > <i class="fas fa-regular fa-eye "></i>Details</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"> <input type="submit" value="Delete" onclick="return confirm('Are you sure want to delete this category')"/></a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="text-white">
    <a asp-action="Create" asp-controller="Categories" class="btn btn-outline-success">
        <i class="fas fa-regular fa-plus-square mr-3"></i>
        Create</a>
   
</div>