@model Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="row">
    <div class="col-md-6">
        <p>
            <h2 class="text-center">Details of - @Model.Name - Category</h2>
        </p>
    </div>
    <div class="col-md-6 offset-3">

        <div class="form-group">
            <label asp-for="Name" class="controle-lable"></label>
            <input asp-for="Name" class="form-control" autocomplete="off" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="controle-lable"></label>
            <textarea asp-for="Description" class="form-control disabled" rows=3 readonly></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info" style="float:right">
                <i class="fas fa-regular fa-pencil"></i>
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary"> Show All Category</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}